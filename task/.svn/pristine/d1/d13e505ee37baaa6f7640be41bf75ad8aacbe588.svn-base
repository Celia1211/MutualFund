<%@ include file="template-header.jsp" %>
<script>
	window.onload = function () { document.getElementById("${tabName}Link").click(); }
</script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
<!-- DATA TABLES SCRIPT -->
<script src="<c:url value="/resources/js/plugins/datatables/jquery.dataTables.js"/>" type="text/javascript"></script>
<script src="<c:url value="/resources/js/plugins/datatables/dataTables.bootstrap.js"/>" type="text/javascript"></script>
    
<script type="text/javascript">
	$(function() {
		$("#positionTable").dataTable();
		$("#completeTrans").dataTable();
		$('#pendingTrans').dataTable({
        	"bPaginate": true,
        	"bLengthChange": false,
        	"bFilter": false,
        	"bSort": true,
        	"bInfo": true,
       	 	"bAutoWidth": false
    	});
	});
</script>

 <div class="col-lg-12">
 <ul class="nav nav-tabs">
      <li class="active"><a id="custinfoLink" href="#custinfo" data-toggle="tab">Account Information</a></li>
      <li><a id="restpassLink" href="#transition" data-toggle="tab">Transition History</a></li>
      <li><a id="portfolioLink" href="#portfolio" data-toggle="tab">Portfolio</a></li>
      <li><a id="requestCheckLink" href="#requestCheck" data-toggle="tab">Request Check</a></li>
 </ul>
    
<section class="tab-content">
  <article class="tab-pane active" id="custinfo"> 
    <h3>Customer Information</h3>
    <h4>Account Information of ${user.firstname } ${user.lastname} </h4>
    <h4>Address: ${user.addrLine1 } ${user.addrLine2 }</h4>
    <h4>Last Trading Date: ${lastExecutionDate}</h4>
    <h4>Cash Balance: ${user.cash } </h4>
        <h3>Reset Password</h3>
    <form method="post" action="resetpassword" class="col-lg-3">
	<p>New Password</p>
		<input type="password" class="form-control" 
		name="newPassword" value="${fn:escapeXml(param.newPassword)}" /><br> 
	<p>Confirm New Password:</p>
		<input type="password" class="form-control" 
		name="confirmPassword" value="${fn:escapeXml(param.confirmPassword)}" /><br> 
	<input type="submit" class="btn btn-primary btn-sm" name="button"
			value="Submit" />
	</form>
  </article>
  
  <article class="tab-pane" id="transition">
	<h3>${user.firstname} ${user.lastname}</h3>

	<h4>Your transaction history is as follows:</h4>
	
	<!-- <div class="wrapper row-offcanvas row-offcanvas-left"> -->
               <!--  <section class="content"> -->
                    <div class="row">
                        <div class="col-sm-12">
                        	<div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">Pending Transactions</h3>                                    
                                </div><!-- /.box-header -->
                                <div class="box-body table-responsive">
                                    <table id="pendingTrans" class="table table-bordered table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Date of Order</th>
                                                <th>Date of Execution</th>
                                                <th>Status</th>
                                                <th>Operation</th>
                                                <th>Ticker</th>
                                                <th>Fund Name</th>
                                                <th>Shares Number</th>
                                                <th>Current Share Price</th>
                                                <th>Dollar Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        	<c:forEach var="transaction" items="${transactionList}">
                                        	<tr>
												<td>${transaction.orderDate}</td>
												<td>${transaction.executeDate}</td>
												<td>${transaction.status}</td>
												<td>${transaction.transactionType}</td>
												<td>${transaction.fund.ticker}</td>
												<td>${transaction.fund.name}</td>
												<td style="text-align:right">${transaction.shares}</td>
												<td style="text-align:right">${transaction.sharePrice}</td>
												<td style="text-align:right">${transaction.amount}</td>
											</tr>
											</c:forEach>
                                        </tbody>
                                    </table>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                            
                            <div class="box">
                                <div class="box-header">
                                    <h3 class="box-title">Complete Transactions</h3>                                    
                                </div><!-- /.box-header -->
                                <div class="box-body table-responsive">
                                    <table id="completeTrans" class="table table-bordered table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Date of Order</th>
                                                <th>Date of Execution</th>
                                                <th>Status</th>
                                                <th>Operation</th>
                                                <th>Ticker</th>
                                                <th>Fund Name</th>
                                                <th>Shares Number</th>
                                                <th>Current Share Price</th>
                                                <th>Dollar Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                    	<c:forEach var="transaction" items="${transactionList}">
                                    		<tr>
												<td>${transaction.orderDate}</td>
												<td>${transaction.executeDate}</td>
												<td>${transaction.status}</td>
												<td>${transaction.transactionType}</td>
												<td>${transaction.fund.ticker}</td>
												<td>${transaction.fund.name}</td>
												<td style="text-align:right">${transaction.shares}</td>
												<td style="text-align:right">${transaction.sharePrice}</td>
												<td style="text-align:right">${transaction.amount}</td>
											</tr>
										</c:forEach>
                                    </tbody>
                                </table>
            	</div><!-- /.box-body -->
        	</div><!-- /.box -->
    	</div>
  	</div>
  </article>
  
  <article class="tab-pane" id="portfolio">
	<div class="row">
	    <div class="col-lg-12">
	    	<div class="box">
	            <div class="box-header">
	                <h3 class="box-title">Basic Information of the Fund You Own:</h3>                                    
	            </div>
	            <div class="box-body table-responsive">
	                <table id="positionTable" class="table table-bordered table-striped table-hover">
	                    <thead>
	                        <tr>
	                            <th>Fund Name</th>
					       		<th>Fund Ticker</th>
					       		<th>Number of Shares</th>
					       		<th>Last Closing Price</th>
					       		<th>Buy</th>
					       		<th>Sell</th>
	                        </tr>
	                    </thead>
	                    <tbody>
                            <c:forEach var="position" items="${positionList}">
	                            <tr>
									<td>${position.fund.name}</td>
									<td>${position.fund.symbol}</td>
									<td style="text-align:right">${position.shares}</td>
									<td style="text-align:right">${position.curSharePrice}</td>
									<td><a href="tobuyfund" class="btn btn-primary">Buy</a></td>
									<td><a href="tosellfund" class="btn btn-primary">Sell</a></td>
								</tr> 
							</c:forEach>
	                    </tbody>
	                </table>
	            </div><!-- /.box-body -->
	         </div><!-- /.box -->
	    </div>
	</div>
  </article>
  
  <article class="tab-pane" id="requestCheck">
      <h4>Account Information of ${user.firstname } ${user.lastname} </h4>
      <h4>Cash Balance: ${user.cash } </h4>
    <form method="post" action="requestcheck">
		<input type="text" name="checkNumber"/>
		<input type="submit" class="btn btn-primary" name="button" value="Request a check"/>
	</form>
   </article>
  
 </section>
</div>
 
</body>
</html>

<%@ include file="template-footer.jsp" %>
